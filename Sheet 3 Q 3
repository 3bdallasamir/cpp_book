#include <iostream>
using namespace std;


class BankAccount {

private:
    double account_number ;
    double balance = 1000 ;

public:

    void setBalance ( double bal){
        balance+=bal;

    }

    double getBalance (){
        return balance;
    }

    void setNewBalance( double new_bal)
    {
        balance-=new_bal;
    }

    double getNewBalance(){
        return balance;
    }


};

int main() {

    BankAccount Account ;

    double account_number ;
    double password ;
    int num ;
    double num1 ;
    double num2 ;

    cout << " Please Enter Your account Number : "<<endl;
    cin >> account_number;

    cout << " Please Enter Your password : "<<endl;
    cin >> password;

    cout << " If You need to deposit money , press 1 .\n If you want to withdraw money , press 2 ." << endl;
    cin >> num;

    switch (num ) {
        case 1 :
            cout << " Please Enter The Number you want to Deposit : " << endl;
            cin >> num1;

            Account.setBalance(num1);

            cout << " Your Balance is : " << Account.getBalance() << endl;
            cout << " Thanks For Using Our Bank ." << endl;

            break;

        case 2 :

            cout << " Please Enter The Number you want to Withdraw : " << endl;
            cin >> num2;

            if (num2 < Account.getBalance()) {

                Account.setNewBalance(num2);
                cout << " Your Balance is : " << Account.getNewBalance() << endl;

                cout << " Thanks For Using Our Bank ." << endl;

            } else {
                cout << "  Failed withdrawal . " << endl;
            }

            break;

        default:
            cout << "Unable to complete this procedure ." << endl;
    }

            return 0;
}
